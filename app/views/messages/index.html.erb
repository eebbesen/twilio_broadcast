<h1>Messages</h1>

<%= link_to 'New Message', new_message_path, class: 'btn btn-primary' %>

<table class="table">
  <thead>
    <tr>
      <th>Content</th>
      <th>Status</th>
      <th>Sent at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= link_to message.content, message %></td>
        <td><%= message.status %></td>
        <td><%= message.sent_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
