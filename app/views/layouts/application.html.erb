<!DOCTYPE html>
<html>
  <head>
    <title>TwilioBroadcast</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if user_signed_in? %>
        <div class="container-fluid">
          <li class="btn logout-btn-wrapper">
            <%= link_to 'Logout', destroy_user_session_path, method: :delete, id: 'logout-btn' %>
          </li>
        </div>
      <% end %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </body>
</html>
