<!DOCTYPE html>
<html>
  <head>
    <title>TwilioBroadcast</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg">
        <div class="collapse navbar-collapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
               <%= link_to 'Messages', messages_path, id: 'messages-btn', class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Recipients', recipients_path, id: 'recipients-btn', class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Recipient Lists', recipient_lists_path, id: 'recipient-lists-btn', class: 'nav-link' %>
            </li>
          </ul>
          <% if user_signed_in? %>
            <span class="navbar-text">
              <%= link_to 'Logout', destroy_user_session_path, method: :delete, id: 'logout-btn', class: 'nav-link' %>
            </span>
          <% end %>
        </div>
      </nav>
      <% if notice %>
        <p class="notice"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert"><%= alert %></p>
      <% end %>
      <div class="container">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
