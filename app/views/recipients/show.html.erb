<% if @recipient %>
  <p>
    <strong>Phone:</strong>
    <%= @recipient.phone %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= @recipient.email %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= @recipient.name %>
  </p>

  <p>
    <strong>Notes:</strong>
    <%= @recipient.notes %>
  </p>

  <%= link_to 'Edit', edit_recipient_path(@recipient), class: 'btn btn-primary' %>
  <%= link_to 'Cancel', recipients_path, class: 'btn btn-secondary' %>
  <%= link_to 'Delete', @recipient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>

  <h3>Recipent Lists</h3>
  <% RecipientList.where(user: @recipient.user).each do |rl| %>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="check_<%= rl.id %>" disabled <%= 'checked' if @recipient.on_recipient_list?(rl.id) %> >
      <label class="form-check-label" for="check_<%= rl.id %>">
        <%= rl.name %>
      </label>
    </div>
  <% end %>
<% else %>
  <strong>Recipient not found</strong>
<% end %>
